{
  "name": "gilded-rose-lib",
  "version": "1.0.0",
  "description": "Gilded Rose kata in TypeScript",
  "source": "./index.ts",
  "exports": "./dist/index.modern.js",
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "scripts": {
    "bundle:clean": "rimraf dist/**/*",
    "bundle:build": "microbundle",
    "bundle": "npm-run-all bundle:*",
    "watch": "microbundle -w",
    "precompile": "rimraf app/**/*.js test/**/*.js",
    "compile": "tsc",
    "pretest": "rimraf app/**/*.js test/**/*.js",
    "test": "nyc mocha",
    "test:watch": "nyc mocha --watch --watch-files app/**/*.ts --watch-files test/**/*.ts",
    "lint": "npm-run-all lint:*",
    "lint:prettier": "prettier \"app/*.{js,ts}\" --list-different",
    "fix": "npm-run-all fix:*",
    "fix:prettier": "prettier \"app/**/*.{js,ts}\" --write"
  },
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/chai": "~3.5.2",
    "@types/mocha": "~2.2.41",
    "@types/node": "~7.0.18",
    "chai": "~4.2.0",
    "microbundle": "^0.13.3",
    "mocha": "~8.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "~15.1.0",
    "prettier": "^2.4.1",
    "rimraf": "~3.0.2",
    "source-map-support": "0.5.19",
    "ts-node": "~9.1.1",
    "typescript": "~4.1.3"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**"
    ],
    "require": [
      "./node_modules/ts-node/register"
    ],
    "reporter": [
      "html",
      "text"
    ]
  }
}
